# .envrc

VENV='.venv'


COLOR_MAGENTA="\033[1;35m"

FORMAT_BOLD="\033[1m"
FORMAT_NONE="\033[0m"

MSG_INFO="${FORMAT_BOLD}${COLOR_MAGENTA}info:${FORMAT_NONE}"

msg_info()
{
	printf '%b %s\n' "$MSG_INFO" "$1"
}


use flake


if [ ! -d "$VENV" ]; then
	msg_info "creating \`$VENV\` because it doesn't seem to exist"
	python -m venv "$VENV"
fi

if [ -n "$FISH_VERISON" ]; then
	. "$VENV/bin/activate.fish"
else
	. "$VENV/bin/activate"
fi

if [ ! -f "$VENV/.requirements-installed" ]; then
	msg_info 'installing python requirements since they seem to be missing'
	pip install -r 'requirements.txt'
	pip install -r 'requirements-local.txt'
	touch "$VENV/.requirements-installed"
fi
